<div class= "payment-container">
  <div class= "row">
    <% @order.options.each do |option| %>
      <div class="payment-category-list">
        <div class="payment-category-icone">
          <%= image_tag option.category.photo, width: '80px', height: '80px' %>
        </div>
        <div class="payment-options">
          <h4> Category: <%= option.category.name %> </h4>
          <p>Option: <%= option.name %></p>
          <p>Price : <%= humanized_money_with_symbol(@order.amount) %></p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="buttons">
    <button id="pay" class="btn btn-primary">Payer la commande</button>
    <button ><%= link_to 'Annuler', root_path %></button>

    <!-- Script for stripe payment -->
    <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @order.checkout_session_id %>'
          });
        });
      </script>

  </div>
</div>