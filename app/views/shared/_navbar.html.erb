<div class="navbar navbar-expand-sm navbar-monamap fixed-top">
    <div class="container">
      <%= link_to root_path do %>
        <div class="logo-inline">
          <%= image_tag "amap-montsdor.png" %>
            <div class="text-logo">
              <span>AMAP</span>
              <span>des Monts d'Or</span>
            </div>
        </div>
      <% end %>


      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>


      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <%= image_tag "greta-avatar.png", class: "avatar-large dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Mon profile", "#", class: "dropdown-item" %>
                <%= link_to "Deconnexion", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
          <% else %>
            <li class="nav-item" id="login-button">
              <%= link_to "Me connecter", new_user_session_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
  </div>
</div>
